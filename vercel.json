{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "rewrites": [
    {
      "source": "/((?!sitemap\\.xml|robots\\.txt|llms\\.txt|llms-full\\.txt|images/.*|assets/.*|screenshots/.*|favicon\\.ico|api/|_next/).*)",
      "destination": "/index.html"
    }
  ],
  "env": {
    "VITE_SITE_URL": "https://dreamyroom.co"
  }
}
